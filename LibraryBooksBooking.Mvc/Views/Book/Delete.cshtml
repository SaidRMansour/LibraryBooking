@model LibraryBooksBooking.Core.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<h4>Book</h4>
<hr />
<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h4>Book</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                Author
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Author)
            </dd>
            <dt class="col-sm-2">
                ISBN
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ISBN)
            </dd>
            <dt class="col-sm-2">
                Genre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Genre)
            </dd>
            <dt class="col-sm-2">
                Published Date
            </dt>
            <dd class="col-sm-10">
                @Model.PublishedDate.ToString("dd. MMMM yyyy")
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Guid" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-warning" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
