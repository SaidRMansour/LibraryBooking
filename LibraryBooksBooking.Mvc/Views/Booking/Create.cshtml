@model LibraryBooksBooking.Core.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" type="date"/>
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReturnDate" class="control-label"></label>
                <input asp-for="ReturnDate" class="form-control" type="date"/>
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerGuid" class="control-label"></label>
                <select asp-for="CustomerGuid" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BookGuid" class="control-label"></label>
                <select asp-for="BookGuid" class="form-control" asp-items="ViewBag.BookId"></select>
            </div>
            <div class="form-group" style="margin-top:5%">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
