@model IEnumerable<LibraryBooksBooking.Core.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<style>
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
</style>
<div class="header-container">
    <h2>Bookings</h2>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerGuid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookGuid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.Title)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Guid">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Guid">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Guid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
